{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2018",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src/**/*", "index.ts"]
}
