{
  "name": "vending-api",
  "version": "0.0.1",
  "description": "Api serving the data needed in the vending machines administration system",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "start": "npm run build:ts && node dist/index.js",
    "test": "jest",
    "lint": "eslint '**/*.ts'",
    "precommit": "npm run lint"
  },
  "keywords": [
    "api",
    "koa.js",
    "node.js",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanbueno/koa-template.git"
  },
  "author": "Alan Bueno",
  "license": "ISC",
  "engines": {
    "node": "8.11.2",
    "npm": "6.1.0"
  },
  "dependencies": {
    "@sentry/node": "^5.26.0",
    "boom": "^7.3.0",
    "config": "^3.3.2",
    "joi": "^17.2.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@sentry/typescript": "^5.19.2",
    "@types/boom": "^7.3.0",
    "@types/jest": "^26.0.15",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "jest": "^25.5.4",
    "nyc": "^15.1.0",
    "prettier": "2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/**/*.ts"
    ],
    "require": [
      "babel-register"
    ],
    "exclude": [
      "packages/**/*"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false
  }
}
