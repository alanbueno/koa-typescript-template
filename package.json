{
  "name": "vending-api",
  "version": "0.0.1",
  "description": "Api serving the data needed in the vending machines administration system",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "start": "npm run build:ts && node dist/index.js",
    "test": "jest",
    "lint": "eslint '**/*.ts'",
    "precommit": "npm run lint"
  },
  "keywords": [
    "api",
    "koa.js",
    "node.js",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanbueno/koa-template.git"
  },
  "author": "Alan Bueno",
  "license": "ISC",
  "engines": {
    "node": "8.11.2",
    "npm": "6.1.0"
  },
  "dependencies": {
    "@sentry/node": "^5.1.0",
    "boom": "^7.3.0",
    "config": "^3.1.0",
    "joi": "^14.3.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.4.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@sentry/typescript": "^5.10.0",
    "@types/boom": "^7.2.1",
    "@types/jest": "^24.0.11",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^11.13.5",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "nyc": "^14.0.0",
    "prettier": "1.17.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/**/*.ts"
    ],
    "require": [
      "babel-register"
    ],
    "exclude": [
      "packages/**/*"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false
  }
}
