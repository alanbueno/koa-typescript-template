{
  "name": "koa-typescript-api",
  "version": "0.0.1",
  "description": "A simple/clean Koa template with basic resources to start your koa api on top of typescript",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean:dist && npm run build:ts",
    "build:ts": "tsc",
    "clean:dist": "rm -rf ./dist",
    "db:local:start": "./bin/tearDownTestDB.sh && docker run --name postgres-db-test-container -p 5432:5432 -e POSTGRES_DB=postgres_test -e POSTGRES_PASSWORD=pass -d postgres",
    "db:migrate": "npx sequelize-cli db:migrate:latest",
    "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate",
    "db:status": "npx sequelize-cli db:migrate:status",
    "lint": "eslint '**/*.ts'",
    "precommit": "npm run lint",
    "start": "npm run build:ts && node dist/index.js",
    "test": "./bin/prepareDbForTest.sh jest",
    "watch:ts": "tsc -w"
  },
  "keywords": [
    "api",
    "koa.js",
    "node.js",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanbueno/koa-template.git"
  },
  "author": "Alan Bueno",
  "license": "ISC",
  "engines": {
    "node": "10.15.13",
    "npm": "6.9.0"
  },
  "dependencies": {
    "@admin/utils": "file:./src/utils",
    "@hapi/boom": "^7.4.2",
    "@hapi/joi": "^15.0.3",
    "@sentry/node": "^5.1.0",
    "config": "^3.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "fs": "0.0.1-security",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.4.0",
    "path": "^0.12.7",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.6",
    "sequelize-cli": "^5.4.0",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@sentry/typescript": "^5.1.0",
    "@types/boom": "^7.2.1",
    "@types/config": "0.0.34",
    "@types/jest": "^24.0.11",
    "@types/koa-router": "^7.0.40",
    "@types/node": "^11.13.5",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "nyc": "^14.0.0",
    "prettier": "1.17.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/**/*.ts"
    ],
    "require": [
      "babel-register"
    ],
    "exclude": [
      "packages/**/*"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": false
  }
}
